<!-- FreeSWITCH Variables Configuration -->
<include>
  <!-- External IP Configuration -->
  <X-PRE-PROCESS cmd="set" data="external_rtp_ip=${EXT_RTP_IP}"/>
  <X-PRE-PROCESS cmd="set" data="external_sip_ip=${EXT_SIP_IP}"/>
  
  <!-- Internal IP Configuration -->
  <X-PRE-PROCESS cmd="set" data="bind_server_ip=0.0.0.0"/>
  
  <!-- SIP Profiles -->
  <X-PRE-PROCESS cmd="set" data="internal_auth_calls=true"/>
  <X-PRE-PROCESS cmd="set" data="internal_sip_port=5060"/>
  <X-PRE-PROCESS cmd="set" data="internal_tls_port=5061"/>
  <X-PRE-PROCESS cmd="set" data="external_sip_port=5080"/>
  <X-PRE-PROCESS cmd="set" data="external_tls_port=5081"/>
  
  <!-- RTP Configuration -->
  <X-PRE-PROCESS cmd="set" data="rtp_start_port=${RTP_START_PORT}"/>
  <X-PRE-PROCESS cmd="set" data="rtp_end_port=${RTP_END_PORT}"/>
  
  <!-- Event Socket Configuration -->
  <X-PRE-PROCESS cmd="set" data="event_socket_password=${FS_EVENT_SOCKET_PASSWORD}"/>
  
  <!-- Database Configuration -->
  <X-PRE-PROCESS cmd="set" data="dsn=pgsql://host=db dbname=${POSTGRES_DB} user=${POSTGRES_USER} password=${POSTGRES_PASSWORD}"/>
  
  <!-- Somleng API Configuration -->
  <X-PRE-PROCESS cmd="set" data="somleng_api_base_url=${SOMLENG_API_URL}"/>
  <X-PRE-PROCESS cmd="set" data="somleng_api_username=${SOMLENG_API_USERNAME}"/>
  <X-PRE-PROCESS cmd="set" data="somleng_api_password=${SOMLENG_API_PASSWORD}"/>
  
  <!-- Audio Configuration -->
  <X-PRE-PROCESS cmd="set" data="sound_prefix=/usr/share/freeswitch/sounds/en/us/callie"/>
  <X-PRE-PROCESS cmd="set" data="hold_music=local_stream://moh"/>
  
  <!-- Codec Configuration -->
  <X-PRE-PROCESS cmd="set" data="global_codec_prefs=OPUS,G722,PCMU,PCMA,G729"/>
  <X-PRE-PROCESS cmd="set" data="outbound_codec_prefs=OPUS,G722,PCMU,PCMA,G729"/>
  
  <!-- Security -->
  <X-PRE-PROCESS cmd="set" data="sip_tls_version=tlsv1,tlsv1.1,tlsv1.2"/>
  
  <!-- Performance Tuning -->
  <X-PRE-PROCESS cmd="set" data="max_sessions=10000"/>
  <X-PRE-PROCESS cmd="set" data="sessions_per_second=100"/>
  
  <!-- Logging -->
  <X-PRE-PROCESS cmd="set" data="console_loglevel=info"/>
  <X-PRE-PROCESS cmd="set" data="default_areacode="/>
  <X-PRE-PROCESS cmd="set" data="default_country="/>
</include>